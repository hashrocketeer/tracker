= content_for :page_head do
  = render 'shared/utilities_nav'

= render 'shared/flash_message'

%section.metadata#departments
  .new_content

  .sortable(data-results_per_page="25")
    %table
      %thead
        %tr
          %th Department Name
          %th.unsorted
      %tbody
        - departments.each do |department|
          %tr(data-id="#{department.id}")
            %td
              %strong= department.department_name
