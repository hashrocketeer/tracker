%fieldset
  %dl.short
    %dt= f.label :first_name
    %dd= f.text_field :first_name, data: { bind: 'value: first_name' }
  %dl.short
    %dt= f.label :last_name
    %dd= f.text_field :last_name, data: { bind: 'value: last_name' }

  %dl.short
    %dt= f.label :phone
    %dd= f.text_field :phone, placeholder: "(###) ###-####", data: { bind: 'value: phone' }
  %dl.short
    %dt= f.label :home_phone
    %dd= f.text_field :home_phone, placeholder: "(###) ###-####", data: { bind: 'value: home_phone' }
  %dl.short
    %dt= f.label :fax
    %dd= f.text_field :fax, placeholder: "(###) ###-####", data: { bind: 'value: fax' }
  %dl.short
    %dt= f.label :badge_id, "Badge ID"
    %dd= f.text_field :badge_id, data: { bind: 'value: badge_id' }
  %dl.short
    %dt= f.label :employee_number, "Employee #"
    %dd= f.text_field :employee_number, data: { bind: 'value: employee_number' }
  %dl.short
    %dt= f.label :department_id, "Department"
    %dd= f.select :department_id, options_for_select(departments), include_blank: "Select department", data: { bind: 'value: department_id' }
  %dl.short
    %dt= f.label :job_title_id, "Job Title"
    %dd= f.select :job_title_id, options_for_select(job_titles), include_blank: "Select job title", data: { bind: 'value: job_title_id' }
  %dl.short
    %dt= f.label :category_id, "Category"
    %dd= f.select :category_id, options_for_select(categories), include_blank: "Select category", data: { bind: 'value: category_id' }
  %dl.short
    %dt= f.label :address
    %dd= f.text_area :address, data: { bind: 'value: address' }
  %dl.short
    %dt= f.label :internal_address
    %dd= f.text_area :internal_address, data: { bind: 'value: internal_address' }
  %dl.short
    %dt= f.label :birth_date
    %dd= f.text_field :birth_date, data: { bind: 'value: birth_date' }
  %dl.short
    %dt= f.label :hire_date
    %dd= f.text_field :hire_date, data: { bind: 'value: hire_date' }
  %dl.short
    %dt= f.label :termination_date
    %dd= f.text_field :termination_date, data: { bind: 'value: termination_date' }
  %dl.short
    %dt= f.label :blood_type
    %dd= f.text_field :blood_type, data: { bind: 'value: blood_type' }
  %dl.short
    %dt= f.label :medical_notes, "Medical alerts/allergies"
    %dd= f.text_area :medical_notes, data: { bind: 'value: medical_notes' }

%fieldset.actions
  = f.submit "Save Trainee"
  = link_to "Cancel", "#", class: "close", data: { bind: 'click: function() { $parent.cancelTrainee() }' }
