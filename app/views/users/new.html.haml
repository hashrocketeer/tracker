= render 'shared/flash_message'

%h1
  Create A New User

= form_for user, html: { class: 'registration' } do |f|
  %fieldset
    %dl
      %dt= f.label :company_name, 'Company'
      %dd= f.text_field :company_name, value: current_user.company_name, disabled: true
  = render 'shared/user_form', f: f
  %fieldset.actions
    = f.submit "Add New User"
    = link_to "Go Back", users_path
