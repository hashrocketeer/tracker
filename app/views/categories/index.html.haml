= content_for :page_head do
  = render 'shared/utilities_nav'

= render 'shared/flash_message'

%section.metadata#categories
  .new_content
    = form_for Category.new do |f|
      %fieldset
        %h1
          = f.label :category_name, "Add New Category"
        %p
          = f.text_field :category_name, placeholder: "Category Name"
      %fieldset.actions
        = f.submit "Add"

  .sortable(data-results_per_page="25")
    %table
      %thead
        %tr
          %th Categories
          %th.unsorted
      %tbody
        - categories.each do |category|
          %tr(data-id="#{category.id}")
            %td
              %strong= category.category_name
