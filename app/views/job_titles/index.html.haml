= content_for :page_head do
  = render 'shared/utilities_nav'

= render 'shared/flash_message'

%section.metadata#departments
  .new_content
    = form_for JobTitle.new do |f|
      %fieldset
        %h1
          = f.label :job_title_name, "Add New Job title"
        %p
          = f.text_field :job_title_name, placeholder: "Job Title Name"
      %fieldset.actions
        = f.submit "Add"

  .sortable(data-results_per_page="25")
    %table
      %thead
        %tr
          %th Job Titles
          %th.unsorted
      %tbody
        = render partial: 'job_title_list', collection: job_titles, as: "job_title"

= render 'shared/delete_modal'

#modal_form.modal
  = render 'job_titles/edit_modal'
